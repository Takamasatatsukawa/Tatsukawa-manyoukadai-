<h1>ラベル登録ページ</h1>

<%= form_with model: @label, local: true do |form| %>
    <% if @label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@label.errors.count, "error") %> 禁止されています:</h2>
      <ul>
        <% @label.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div>
      <%= form.label :name, '名前', id: 'name-label' %><br>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.submit '登録する', id: 'create-label' %>
    </div>
  <% end %>