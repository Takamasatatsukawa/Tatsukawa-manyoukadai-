<%= form_with(model: @task, local: true) do |form| %>
    <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    </div>
    <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
    </div>
    <div>
    <%= form.submit 'Create Task', id: 'create-task' %>
    </div>
  <% end %>
  
