<%= form_with(model: @task, local: true) do |form| %>
    <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    </div>
    <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
    </div>
    <div>
    <%= form.submit 'Create Task', id: 'create-task' %>
    </div>
    <div class="field">
    <%= form.label :deadline_on %>
    <%= form.date_field :deadline_on %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys.map { |p| [p.humanize, p] } %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys.map { |s| [s.humanize, s] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>
  
  <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
  
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>