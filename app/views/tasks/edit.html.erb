<h1><%= action_name == 'new' ? '新しいタスクを作成' : 'Edit Task Page' %></h1>
<%= form_with(model: @task, local: true) do |form| %>
    <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    </div>
    <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
    </div>
    <div>
    <%= form.submit 'Update Task', class: 'edit-task' %>
    </div>
  <% end %>
  

<%= link_to 'Back', tasks_path, id: 'back' %>
