<h1>Tasks Index Page</h1>

# <%= link_to 'Tasks Index Page', new_task_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Created_at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
   <% @tasks.each do |task| %>
    <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.utc.strftime("%Y-%m-%d %H:%M:%S UTC") %></td>
        <td>
          <%= link_to 'Show', task_path(task), class: 'show-task' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'edit-task' %>
          <%= link_to 'Destroy', task_path(task), class: 'destroy-task', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
    </tr>
   <% end %>
  </tbody>
</ul>
