<h1><%= t("views.tasks.show.show task") %></h1>

<p id="task-title"><strong><%= t('views.tasks.show.title') %>:</strong> <%= @task.title %></p>
<p id="task-content"><strong><%= t('views.tasks.show.content') %>:</strong> <%= @task.content %></p>
<p id="task-created-at"><strong><%= t('views.tasks.show.created_at') %>:</strong> <%= @task.created_at_in_time_zone.strftime('%Y/-%m/-%d %H:%M:%S %Z') %></p>
<p id="task-deadline_on"><strong><%= t("activerecord.attributes.task.deadline_on") %>:</strong> <%= @task.deadline_on %></p>
<p id="task-priority"><strong><%= t("activerecord.attributes.task.priority") %>:</strong> <%= I18n.t("enums.task.priority.#{@task.priority}") %></p>
<p id="task-status"><strong><%= t("activerecord.attributes.task.status") %>:</strong> <%= I18n.t("enums.task.status.#{@task.status}") %></p>

<%= link_to t('views.tasks.show.edit'), edit_task_path(@task), id: 'edit-task' %>
<%= link_to t('views.tasks.show.back'), tasks_path, id: 'back' %>