<!-- app/views/tasks/show.html.erb -->

<h1 id="show-task-page">Show Task Page</h1>

<p id="task-title"><strong>Title:</strong> <%= @task.title %></p>
<p id="task-content"><strong>Content:</strong> <%= @task.content %></p>
<p id="task-created-at"><strong>Created_at:</strong> <%= @task.created_at.utc.strftime("%Y-%m-%d %H:%M:%S UTC") %></p>

<%= link_to 'Edit', edit_task_path(@task), class: 'edit-task' %>
<%= link_to 'Back', tasks_path, id: 'back' %>

